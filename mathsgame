
try:
    f = open('mathsgamehighscore.txt', 'r')
    highscore = f.read()
    f.close()

    highscore = int(highscore)
    print("The highest score previously was ")
    print(highscore)

except:
    print("Creating a new mathgamehighscore.txt file")
    f = open("mathsgamehighscore.txt", "w")
    f.write("0")
    f.close()
    highscore = 0


    Play = True
    while Play == True:
        score = 0
        
        print("Welcome to the Maths Quiz")
        print("Can you answer three questions and score maximum points?")
        print("Question 1: What is the product of 2x2x2?")
        answer = int(input("Your answer :>> "))
        
        if answer == 8:
            print("Correct")
            score = score + 1
            print("Your score is ", score)
        else:
            print("Incorrect, the answer is 8")
            print("Your score is ", score)
            
        print("Question 2: What is the product of 1x1x2?")
        answer = int(input("Your answer :>> "))
        
        if answer == 2:
            print("Correct")
            score = score + 1
            print("Your score is ", score)
        else:
            print("Incorrect, the answer is 2")
            print("Your score is ", score)
        
        print("Question 3: What is the product of 20x2x1?")
        answer = int(input("Your answer :>> "))
        
        if answer == 40:
            print("Correct")
            score = score + 1
            print("Your score is ", score)
        else:
            print("Incorrect, the answer is 40")
            print("Your score is ", score)
        
        if score >= highscore:
            highscore = score
            print("You have set a new highscore")
            highscore = str(highscore)
            f = open('mathsgamehighscore.txt', 'w')
            f.write(highscore)
            f.close()
        else:
            print('Better luck next time')
            
        Play = False

